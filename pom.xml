<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>de.wwu.scdh.oxygen.extension</groupId>
    <artifactId>scdh-oxygen-extension</artifactId>
    <version>1.0.3</version>
    
    <name>scdh-oxygen-extension</name>
    <url>https://github.com/scdh/scdh-oxygen-extension</url>

    <properties>
	<saxon.version>9.9.1-6</saxon.version>
	<framework.dir>${project.basedir}/frameworks/teip5scdh</framework.dir>
	<test.dir>${project.basedir}/test/xspec</test.dir>
	<testing.xsl.dir>${project.build.directory}/generated-resources/xml/xslt/</testing.xsl.dir>
    </properties>

    <build>
	<plugins>

	    <!-- run XSpec regression tests -->
	    <plugin>
		<groupId>io.xspec.maven</groupId>
		<artifactId>xspec-maven-plugin</artifactId>
		<configuration>
                    <!--coverage>true</coverage-->
		    <generateSurefireReport>true</generateSurefireReport>
		    <testDir>test/xspec</testDir>
		    <catalogFile>${project.basedir}/catalog.xml</catalogFile>
		</configuration>
		<executions>
                    <execution>
			<phase>test</phase>
			<goals>
                            <goal>run-xspec</goal>
			</goals>
                    </execution>
		</executions>
		<dependencies>
		    <dependency>
			<groupId>net.sf.saxon</groupId>
			<artifactId>Saxon-HE</artifactId>
			<version>${saxon.version}</version>
		    </dependency>
		</dependencies>
            </plugin>

	    <!-- make framework package -->
	    <plugin>
		<artifactId>maven-assembly-plugin</artifactId>
		<version>2.4</version>
		<executions>
		    <execution>
			<id>make-assembly</id>
			<phase>package</phase>
			<goals>
			    <goal>single</goal>
			</goals>
			<configuration>
			    <archiveBaseDirectory>${project.basedir}</archiveBaseDirectory>
			    <descriptors>
				<descriptor>assembly.xml</descriptor>
			    </descriptors>
			</configuration>
		    </execution>
		</executions>
	    </plugin>

	    <plugin>
		<groupId>org.codehaus.mojo</groupId>
		<artifactId>xml-maven-plugin</artifactId>
		<executions>
		    <execution>
			<goals>
			    <goal>transform</goal>
			</goals>
		    </execution>
		</executions>
		<configuration>
		    <transformationSets>
			<!-- make a package descriptor using information from this pom.xml -->
			<transformationSet>
			    <dir>${project.basedir}</dir>
			    <includes>
				<include>pom.xml</include>
			    </includes>
			    <stylesheet>pages/descriptor.xsl</stylesheet>
			</transformationSet>
			<!-- make tests from XPath expressions in external author actions -->
			<transformationSet>
			    <!-- link.person -->
			    <dir>${framework.dir}/externalAuthorActions</dir>
			    <includes>
				<include>link-person.xml</include>
			    </includes>
			    <stylesheet>${test.dir}/extractXpath.xsl</stylesheet>
			    <fileMappers>
				<fileMapper
				    implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
				    <targetExtension>.test.xsl</targetExtension>
				</fileMapper>
			    </fileMappers>
			    <parameters>
				<parameter>
				    <name>match-conditions</name>
				    <value>persName|person||prefixDef</value>
				</parameter>
			    </parameters>
			</transformationSet>
			<transformationSet>
			    <!-- sel.language -->
			    <dir>${framework.dir}/externalAuthorActions</dir>
			    <includes>
				<include>sel-language.xml</include>
			    </includes>
			    <stylesheet>${test.dir}/extractXpath.xsl</stylesheet>
			    <fileMappers>
				<fileMapper
				    implementation="org.codehaus.plexus.components.io.filemappers.FileExtensionMapper">
				    <targetExtension>.test.xsl</targetExtension>
				</fileMapper>
			    </fileMappers>
			</transformationSet>
			<transformationSet>
			    <!-- copy test cases to the same folder -->
			    <dir>${framework.dir}/teip5scdh_samples</dir>
			    <includes>
				<include>personography.xml</include>
				<include>fatherandson.xml</include>
				<include>empty.xml</include>
			    </includes>
			    <stylesheet>${test.dir}/id.xsl</stylesheet>
			</transformationSet>
		    </transformationSets>
		</configuration>
		<dependencies>
		    <dependency>
			<groupId>net.sf.saxon</groupId>
			<artifactId>Saxon-HE</artifactId>
			<version>${saxon.version}</version>
		    </dependency>
		</dependencies>
	    </plugin>
	    
	</plugins>
    </build>

</project>
