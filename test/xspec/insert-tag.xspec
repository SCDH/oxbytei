    <x:param name="style">aggregative</x:param>
    <x:param name="startId">a1</x:param>
    <x:param name="endId">a2</x:param>
    
    <x:scenario label="aggregative - enclose text" >
        <x:context>
            <t:p>A AA <t:anchor xml:id="a1"/>B BB BBB<t:anchor xml:id="a2"/> C CC</t:p>
