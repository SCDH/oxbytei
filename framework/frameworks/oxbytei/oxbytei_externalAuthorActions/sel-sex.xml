<?xml version="1.0" encoding="UTF-8"?>
<!-- editing atom -->
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="sel.sex">
  <a:name>@sex</a:name>
  <a:description>@sex specifies the sex of the person.</a:description>
  <a:smallIconPath href="${framework(oXbytei)}/images/ask-16.png"/>
  <a:largeIconPath href="${framework(oXbytei)}/images/ask-24.png"/>
  <a:operations>
    <a:operation id="de.wwu.scdh.oxbytei.SelectAttributeValueOperation">
      <a:xpathCondition>self::person</a:xpathCondition>
      <a:arguments>
        <a:argument name="name">sex</a:argument>
        <a:argument name="elementLocation">self::*</a:argument>
        <a:argument name="message">Specify the sex of the person.</a:argument>
        <a:argument name="rollbackOnCancel">true</a:argument>
        <a:argument name="icon">${framework(oXbytei)}/images/ask-24.png</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
