<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="sel.type">
  <a:name>@type</a:name>
  <a:description>Characterize the element in some sense, using any convenient classification scheme or typology.</a:description>
  <a:smallIconPath href="${framework(oXbytei)}/images/type-16.png"/>
  <a:largeIconPath href="${framework(oXbytei)}/images/type-24.png"/>
  <a:operations>
    <a:operation id="de.wwu.scdh.oxbytei.SelectAttributeValueOperation">
      <a:xpathCondition>true()</a:xpathCondition>
      <a:arguments>
        <a:argument name="name">type</a:argument>
        <a:argument name="elementLocation">self::*</a:argument>
        <a:argument name="message">Characterize the element in some sense, using any convenient classification scheme or typology.</a:argument>
        <a:argument name="rollbackOnCancel">true</a:argument>
        <a:argument name="icon">${framework(oXbytei)}/images/type-24.png</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
