<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="sel.reason">
  <a:name>@reason</a:name>
  <a:description>Specify the reason</a:description>
  <a:operations>
    <a:operation id="de.wwu.scdh.oxbytei.SelectAttributeValueOperation">
      <a:xpathCondition>self::*:unclear | self::*:gap | self::*:surplus | self::*:supplied</a:xpathCondition>
      <a:arguments>
        <a:argument name="name">reason</a:argument>
        <a:argument name="elementLocation">self::*</a:argument>
        <a:argument name="message">Specify the reason</a:argument>
        <a:argument name="rollbackOnCancel">true</a:argument>
        <a:argument name="icon">${framework(oXbytei)}/images/ask-24.png</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
