<?xml version="1.0" encoding="UTF-8"?>
<!-- user action -->
<a:authorAction xmlns:a="http://www.oxygenxml.com/ns/author/external-action"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.oxygenxml.com/ns/author/external-action http://www.oxygenxml.com/ns/author/external-action/authorAction.xsd"
  id="oxbytei.schema.attribute.editor">
  <a:name>@attr</a:name>
  <a:description>Edit an attribute allowed in the context.</a:description>
  <a:operations>
    <a:operation id="de.wwu.scdh.oxbytei.SchemaAttributeEditorOperation">
      <a:xpathCondition>true()</a:xpathCondition>
      <a:arguments>
        <a:argument name="name">NN</a:argument>
        <a:argument name="namespace">NN</a:argument>
        <a:argument name="elementLocation">self::*</a:argument>
      </a:arguments>
    </a:operation>
  </a:operations>
  <a:accessKey/>
</a:authorAction>
